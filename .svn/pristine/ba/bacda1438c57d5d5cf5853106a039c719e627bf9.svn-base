<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
                         "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app id="WebApp">
	<display-name>Nova</display-name>
	<context-param>
		<param-name>datasourceJNDI</param-name>
		<param-value>jdbc/eflowdatasource</param-value>
	</context-param>
	<context-param>
		<param-name>compnwJNDI</param-name>
		<param-value>jdbc/compnwdatasource</param-value>
	</context-param>
	<context-param>
		<param-name>gmpsJNDI</param-name>
		<param-value>jdbc/gmpsdatasource</param-value>
	</context-param>
	<context-param>
		<param-name>pretestSQL</param-name>
		<param-value></param-value>
	</context-param>
	<context-param>
		<param-name>encrypt.key</param-name>
		<param-value>96xebf2ae0123456</param-value>
	</context-param>
	<context-param>
		<param-name>sso.preauth.username</param-name>
		<param-value>NCAOEFLOW</param-value>
	</context-param>
	<context-param>
		<param-name>sso.preauth.password</param-name>
		<param-value>228786CE90037F5CEAB5C150705B1BE4</param-value>
	</context-param>
	<context-param>
		<param-name>sso.auth.actions</param-name>
		<param-value>/logonAction.it,/testSSO.jsp</param-value>
	</context-param>
	<context-param>
		<param-name>sso.login.key.lifetime</param-name>
		<param-value>10000</param-value>
	</context-param>
	<context-param>
		<param-name>sso.log.level</param-name>
		<param-value>2</param-value>
	</context-param>
	<context-param>
		<param-name>login.file</param-name>
		<param-value>/login.jsp</param-value>
	</context-param>
	<context-param>
		<param-name>login.param.userid</param-name>
		<param-value>logonId</param-value>
	</context-param>
	<context-param>
		<param-name>login.param.password</param-name>
		<param-value>password</param-value>
	</context-param>
	<filter>
		<filter-name>SetCharacterEncodingFilter</filter-name>
		<filter-class>com.aiait.eflow.util.SetCharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>GBK</param-value>
		</init-param>
	</filter>
	<filter>
		<filter-name>SessionCheckFilter</filter-name>
		<filter-class>com.aiait.eflow.util.SessionCheckingFilter</filter-class>
		<init-param>
			<param-name>ignoreFiles</param-name>
			<param-value>/welcome.jsp,/testSSO.jsp,/login.jsp,/logonAction.it,/encryptpassword.jsp,/encrypt.jsp</param-value>
		</init-param>
		<init-param>
			<param-name>loginFile</param-name>
			<param-value>/welcome.jsp</param-value>
		</init-param>
	</filter>
	<filter>
		<filter-name>AuthorityCheckFilter</filter-name>
		<filter-class>com.aiait.eflow.util.AuthorityCheckingFilter</filter-class>
		<init-param>
			<param-name>messageFile</param-name>
			<param-value>/errordisplay.jsp</param-value>
		</init-param>
	</filter>
	<filter>
		<filter-name>SpnegoKerberosFilter</filter-name>
		<filter-class>com.aiait.framework.security.SpnegoKerberosFilter</filter-class>
		<init-param>
			<param-name>sso.forward.ntlm</param-name>
			<param-value>true</param-value>
		</init-param>
		<init-param>
			<param-name>sso.login.module.byjvm</param-name>
			<param-value>true</param-value>
		</init-param>
		<init-param>
			<param-name>spnego.login.client.module</param-name>
			<param-value>spnego-client</param-value>
		</init-param>
		<init-param>
			<param-name>spnego.login.server.module</param-name>
			<param-value>spnego-server</param-value>
		</init-param>
		<init-param>
			<param-name>spnego.krb5.conf</param-name>
			<param-value>/WEB-INF/krb5.conf</param-value>
		</init-param>
		<init-param>
			<param-name>spnego.login.conf</param-name>
			<param-value>/WEB-INF/login.conf</param-value>
		</init-param>
	</filter>
	<filter>
		<filter-name>SpnegoNtlmFilter</filter-name>
		<filter-class>com.aiait.framework.security.SpnegoNtlmFilter</filter-class>
		<init-param>
			<param-name>jcifs.netbios.wins</param-name>
			<param-value>10.64.63.10,10.65.63.10,10.49.108.129,10.49.108.130,10.49.108.131,10.49.108.132</param-value>
		</init-param>
		<init-param>
			<param-name>jcifs.smb.client.domain</param-name>
			<param-value>AIA</param-value>
		</init-param>
		<init-param>
			<param-name>jcifs.util.loglevel</param-name>
			<param-value>3</param-value>
		</init-param>
		<init-param>
			<param-name>jcifs.netbios.cachePolicy</param-name>
			<param-value>-1</param-value>
		</init-param>
		<init-param>
			<param-name>jcifs.smb.lmCompatibility</param-name>
			<param-value>3</param-value>
		</init-param>
		<init-param>
			<param-name>jcifs.netbios.soTimeout</param-name>
			<param-value>8000</param-value>
		</init-param>
		<init-param>
			<param-name>jcifs.netbios.retryTimeout</param-name>
			<param-value>6000</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>SetCharacterEncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>SessionCheckFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>AuthorityCheckFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>SpnegoKerberosFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>SpnegoNtlmFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<listener>
		<listener-class>com.aiait.eflow.job.TimeJobListener</listener-class>
	</listener>
	<servlet>
		<servlet-name>action</servlet-name>
		<servlet-class>com.aiait.framework.mvc.servlet.DispatchServlet</servlet-class>
		<!-- Default -->
		<init-param>
			<param-name>config</param-name>
			<param-value>/WEB-INF/aiaitframework.xml</param-value>
		</init-param>
		<init-param>
			<param-name>initDataConfig</param-name>
			<param-value>com.aiait.eflow.util.BaseDataUtil</param-value>
		</init-param>
		<init-param>
			<param-name>functionName</param-name>
			<param-value>initData</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>action</servlet-name>
		<url-pattern>*.it</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>WebServiceServlet</servlet-name>
		<servlet-class>com.aiait.nova.webservices.servlet.WebServiceServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>WebServiceServlet</servlet-name>
		<url-pattern>/servlet/WebServiceServlet</url-pattern>
	</servlet-mapping>

	<mime-mapping>
		<extension>chm</extension>
		<mime-type>application/mshelp</mime-type>
	</mime-mapping>
	<mime-mapping>
		<extension>pdf</extension>
		<mime-type>application/pdf</mime-type>
	</mime-mapping>
	<mime-mapping>
		<extension>htc</extension>
		<mime-type>text/x-component</mime-type>
	</mime-mapping>
	<welcome-file-list>
		<welcome-file>welcome.jsp</welcome-file>
	</welcome-file-list>
	<taglib>
		<taglib-uri>/WEB-INF/purview.tld</taglib-uri>
		<taglib-location>/WEB-INF/purview.tld</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>/WEB-INF/taglibs-i18n.tld</taglib-uri>
		<taglib-location>/WEB-INF/taglibs-i18n.tld</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>/WEB-INF/taglibs-page.tld</taglib-uri>
		<taglib-location>/WEB-INF/taglibs-page.tld</taglib-location>
	</taglib>
	<resource-ref>
		<description>nova datasource</description>
		<res-ref-name>jdbc/eflowdatasource</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
	<resource-ref>
		<description>compass datasource</description>
		<res-ref-name>jdbc/compnwdatasource</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
	<resource-ref>
		<description>gmps datasource</description>
		<res-ref-name>jdbc/gmpsdatasource</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
	<login-config>
		<auth-method>BASIC</auth-method>
	</login-config>
</web-app>

